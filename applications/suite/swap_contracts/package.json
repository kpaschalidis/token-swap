{
  "name": "token-swap-upgrade",
  "version": "0.0.1",
  "description": "V2 token and its swap smart contract",
  "main": "index.js",
  "scripts": {
    "compile": "npx buidler compile && npx buidler compile --config buidler.config.4.ts",
    "compile:coverage": "npx buidler compile && npx buidler compile --config buidler.config.coverage.ts",
    "compile:typechain": "npx shx rm -fr typechain && npx typechain --target web3-v1 --outDir typechain \"contracts/*.json\"",
    "build": "npm run compile && npm run compile:typechain",
    "build:coverage": "npm run compile:coverage && npm run compile:typechain",
    "deploy-token": "npx buidler deploy-new-token --owner $OWNER",
    "deploy-tokenV1-ropsten": "npx buidler --network ropsten deploy-old-token --owner $OWNER",
    "deploy-tokenV2-ropsten": "npx buidler --network ropsten deploy-new-token --owner $OWNER",
    "deploy-token-rinkeby": "npx buidler --network rinkeby deploy-new-token --owner $OWNER",
    "deploy-token-main": "npx buidler --network mainnet deploy-new-token --owner $OWNER",
    "deploy-swap-engine": "npx buidler deploy-swap-engine --owner $OWNER --newtoken $NEWTOKEN --oldtoken $OLDTOKEN",
    "deploy-swap-engine-ropsten": "npx buidler --network ropsten deploy-swap-engine --owner $OWNER --newtoken $NEWTOKEN --oldtoken $OLDTOKEN",
    "deploy-swap-engine-rinkeby": "npx buidler --network rinkeby deploy-swap-engine --owner $OWNER --newtoken $NEWTOKEN --oldtoken $OLDTOKEN",
    "deploy-swap-engine-main": "npx buidler --network mainnet deploy-swap-engine --owner $OWNER --newtoken $NEWTOKEN --oldtoken $OLDTOKEN",
    "deploy-and-setup-for-test": "npx buidler deploy-and-setup-for-test --v2owner $V2OWNER --owner $OWNER",
    "deploy-and-setup-for-test-ropsten": "npx buidler --network ropsten deploy-and-setup-for-test --v2owner $V2OWNER --owner $OWNER",
    "verify-contract-token": "npx buidler verify-contract --contract-name TokenV1 --address $TOKEN $OWNER",
    "test": "npx buidler test",
    "coverage": "npx buidler coverage --temp artifacts --network coverage --solcoverjs ./.solcover.js",
    "flatten": "npx buidler flatten > Flattened.sol",
    "reset": "npx shx rm -fr node_modules",
    "update": "npm run reset && npm install"
  },
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.3.8",
    "@nomiclabs/buidler-ethers": "^2.0.0",
    "@nomiclabs/buidler-etherscan": "^1.3.3",
    "@nomiclabs/buidler-truffle5": "^1.3.4",
    "@nomiclabs/buidler-web3": "^1.3.4",
    "@openzeppelin/contracts": "^3.1.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.18.63",
    "ansi-colors": "^4.1.1",
    "chai": "^4.2.0",
    "chai-bn": "^0.2.1",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.3",
    "solidity-coverage": "^0.7.9",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "web3": "^1.2.9",
    "zeppelin-solidity": "~1.3.0"
  },
  "dependencies": {
    "@typechain/ethers-v4": "^1.0.0",
    "@typechain/truffle-v4": "^2.0.3",
    "@typechain/truffle-v5": "^2.0.2",
    "@typechain/web3-v1": "^1.0.0",
    "buidler-typechain": "^0.1.1",
    "crypto": "^1.0.1",
    "ts-generator": "0.0.8",
    "typechain": "^2.0.0"
  }
}
